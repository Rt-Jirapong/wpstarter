<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.8/phpunit.xsd"
		 bootstrap="./wpstarter/tests/boot.php"
		 colors="true"
		 convertErrorsToExceptions="true"
		 convertNoticesToExceptions="true"
		 convertWarningsToExceptions="true"
		 stopOnFailure="false">
	<filter>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">./wpstarter/src</directory>
			<exclude>
				<directory>./wpstarter/src/tests</directory>
				<directory>./vendor</directory>
			</exclude>
		</whitelist>
	</filter>
	<logging>
		<log type="coverage-clover" target="./wpstarter/tests/logs/coverage.xml"/>
	</logging>
	<testsuites>
		<testsuite name="U">
			<directory>./wpstarter/tests/src/Unit</directory>
		</testsuite>
	</testsuites>
</phpunit>